/* pages/postcard/postcard.wxss */
.title {
    display: flex;
    align-items: center;
    justify-content: center;
}

.bottom {
    position: absolute;
    width: 100%;
    bottom: 0;
    display: flex;
    z-index: 10;
    justify-content: center;
    flex-wrap: wrap;
    background-color: rgb(255, 255, 255);
}

.select {
    width: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    flex-direction: row;
    height: 120rpx;
    /* margin-top:20rpx ; */
    background-color: rgb(66, 66, 66);
}

.myfunction {
    display: flex;
    align-items: center;
    justify-content: center;
    flex-direction: column;
    flex: 1;
    margin: 10rpx;
}

.upload {
    position: absolute;
    z-index: 999;
}

.is_select view {
    box-shadow: 0 0 0 4px #2cb2ff;
}

/* 模版选择 */
.scroll_content {
    margin: 5vw;
    width: 90vw;
    background-color: rgb(46, 46, 46);
    overflow: hidden;
    white-space: nowrap;
    border-radius: 20rpx;
}

.content {
    /*   display: inline-block;这样写才不会换行  */
    display: inline-block;
    margin-top: 26rpx;
    margin-bottom: 10rpx;
    margin-left: 20rpx;
    text-align: center;

}

.func_text {
    font-size: 12px;
    color: rgb(206, 206, 206)
}

.cs {
    background-color: rgb(66, 66, 66);
}

