<!--pages/My/my.wxml-->
<view style="background-color: rgb(255, 255, 255);padding-bottom: 100rpx;">
    <view style="width:750rpx;height:{{statusBarHeight}}px"></view>
    <view class="title" style="width:750rpx;height:{{titleHeight}}px">
        <view>我的</view>
    </view>
    <view class="part1">
      <view class="UserImage">
      <!-- 头像 -->
        <van-image round width="6rem" height="6rem" fit="cover" bind:click="uploadImg" src="{{UserImage}}" />
      </view>
      <view class="user-info">
        <view class="UserName">{{UserName}}</view>
        <!-- 用户名 -->
        <view class="UserId">个人编号：{{UserId}}</view>
        <!-- ID -->
      </view>
    </view>
    <view class="item">
        <view class="gridTitle">
          我的订单
        </view>
        <van-grid gutter="1rem" square>
        <!-- 使用宫格组件布局 -->
        <!-- 间距为1rem，固定为正方形 -->
        <van-grid-item icon="photo-o" text="待付款"     
          link-type="navigateTo"
          url="/pages/index"/>
        <van-grid-item icon="photo-o" text="待发货" 
          link-type="navigateTo"
          url="/pages/WenChuang/WenChuang"/>
        <van-grid-item icon="photo-o" text="待收货" 
          link-type="navigateTo"
          url="/pages/WenChuang/WenChuang"/>
        <van-grid-item icon="photo-o" text="退款/售后" 
          link-type="navigateTo"
          url="/pages/WenChuang/WenChuang"/>
        </van-grid>
    </view>
    <view class="item">
        <view class="gridTitle">
          我的应用
        </view>
        <van-grid gutter="1rem" square>
        <!-- 使用宫格组件布局 -->
        <!-- 间距为1rem，固定为正方形 -->
        <van-grid-item icon="photo-o" text="账号设置"     
          link-type="navigateTo"
          url="/pages/index"/>
        <van-grid-item icon="photo-o" text="消息中心" 
          link-type="navigateTo"
          url="/pages/WenChuang/WenChuang"/>
        <van-grid-item icon="photo-o" text="景区门票" 
          link-type="navigateTo"
          url="/pages/WenChuang/WenChuang"/>
        <van-grid-item icon="photo-o" text="购物车" 
          link-type="navigateTo"
          url="/pages/WenChuang/WenChuang"/>
        <van-grid-item icon="photo-o" text="客服" 
          link-type="navigateTo"
          url="/pages/WenChuang/WenChuang"/>
        <van-grid-item icon="photo-o" text="收货地址"  
          link-type="navigateTo"
          url="/pages/WenChuang/WenChuang"/>
        <van-grid-item icon="photo-o" text="积分商城" 
          link-type="navigateTo"
          url="/pages/WenChuang/WenChuang"/>
        </van-grid>
    </view>
    <view class="item">
        <view class="gridTitle">
          更多服务
        </view>
        <van-grid gutter="1rem" square>
        <!-- 使用宫格组件布局 -->
        <!-- 间距为1rem，固定为正方形 -->
        <van-grid-item icon="photo-o" text="湄洲明信片"     
          link-type="navigateTo"
          url="/pages/index"/>
        <van-grid-item icon="photo-o" text="我的奖品" 
          link-type="navigateTo"
          url="/pages/WenChuang/WenChuang"/>
        </van-grid>
    </view>

</view>
