/* pages/pray/pray_in.wxss */
.title {
    display: flex;
    align-items: center;
    justify-content: center;
  }
  
  /* 滚动字幕 */
  .new_swiper {
    width: 100%;
    position: absolute;
    height: 6%;
    top: 11.5%;
    z-index: 66;
    left: 0rpx;
  }
  
  .new_swiper swiper-view {
    vertical-align: bottom;
  }
  
  .box_item {
    display: inline-block;
    height: 50%;
    width: 100%;
    background: rgba(0, 0, 0, 0.4);
    border-radius: 23rpx;
    box-sizing: border-box;
    padding: 0 16rpx 0;
    font-size: 50rpx;
    color: rgba(255, 255, 255, 0.9);
    position: absolute;
    top:5%;
    line-height: 47rpx;
    text-align: center;
    font-size: 45rpx;
   font-family: "楷书";
  }
  
  /* 狂点弹幕 */
  .button{
    display: flex;
    width: 50%;
    position: absolute;
    justify-content:center;
    align-items:center;
    font-family: "楷书";
    z-index: 10;
  }
  .img{
    position: absolute;
    top: 160rpx;
    left:30rpx;
    width: 1000rpx; 
    height: 600rpx;
    z-index: 10;
  }
  .button button {
    font-size: 54rpx;
  }
  .aon{
  position: absolute;
  white-space:nowrap;
  animation-timing-function: linear;
  animation-fill-mode: none;
  left: 30%;
  top: 1%;
  bottom: 50%;
  color: rgba(235, 169, 48, 0.932);
  /* font-weight: bold; */
  }
  .doommview{
    z-index: 3;
    height: 10%;
    width: 100%;
    position: absolute;
    top: 10%;
    bottom:80%;
    font-size: 70rpx;
    font-family: "楷书";
  }
  @keyframes first{
    from{top: 60%; }
    to{top: 30%;}
  }
  /* 狂点弹幕2 */
  .button1{
    display: flex;
    width: 50%;
    height: 100%;
    position: absolute;
    justify-content:center;
    align-items:center;
    font-family: "楷书";
    z-index: 20;
  }
  .img1{
    position: absolute;
    top: 370rpx;
    left:140rpx;
    width: 160rpx; 
    height: 200rpx;
    z-index: 20;
  }
  .dd{
    z-index: 3;
    height: 10%;
    width: 100%;
    position: absolute;
    top: 15%;
    bottom:80%;
    font-size: 70rpx;
    font-family: "楷书";
  }
  .money{
  position: absolute;
  left: 40%;
  top: 30%;
  bottom: 10%;
  color: rgba(235, 169, 48, 0.932);
  font-family: "楷书";
  font-size: 70rpx;
  z-index: 99;
  }
  
  /* 编辑弹幕 */
  .back{
    background-image: url('https://img.zcool.cn/community/01944e5b3b3f51a80121b99406aa02.jpg?x-oss-process=image/auto-orient,1/resize,m_lfit,w_1280,limit_1/sharpen,100/quality,q_100/format,webp'); 
    padding-top: 100%;
    padding-bottom: 100%;
    background-repeat: no-repeat;
    background-size:100%;
    background-position:0rpx 150rpx;
    background-color: rgba(239, 241, 84, 0.192);
    /*  background-color: rgba(239, 241, 84, 0.192);背景色别改 */
    z-index: 1;
  }
  .container{
    position: absolute;
    width: 100%;
    height: 90%;
    bottom: 0;
  }
  .in{
    background-color: rgba(112, 110, 110, 0.24);
    position: absolute;
    width: 70%;
    height:6%;
    left:4%;
    bottom:1%;
    border-radius: 15rpx;
    font-size: 45rpx;
    font-family: "楷书";
    color: rgb(19, 18, 18);
    z-index: 99;
  
  }
  .send{
    position: absolute;
    width: 20%;
    height:5%;
    right:4%;
    bottom:1.5%;
    border-radius: 30rpx;
    font-size: 45rpx;
    font-family: "楷书";
    display: flex;
    justify-content: center;
    align-items: center;
    z-index:99 ;
  }
  .receive-container{
    width: 100%;
    height:90%;
  }
  .receive-text{
    position: absolute;
    bottom:87%;
    font-size: 80rpx;
    font-family: "楷书";
    display: flex;
    border: 1px solid #ccc;
  }
  .background{
    position: absolute;
    width: 100%;
    height:8%;
    bottom:0%;
    background-color: rgba(17, 16, 16, 0.055);
    z-index: 2;
  }
  
