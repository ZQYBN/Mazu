.scroll-view {
  width: 100%;
}

.title {
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 18px;
  font-weight: bold;
}

.van-search {
  margin: 16px;
  background-color: #f5f5f5;
  border-radius: 50px;
  padding: 10px 20px;
}

.section {
  margin-top: 20px;
  padding-left: 16px;
  padding-right: 16px;
  padding-bottom: 20px;
  background-color: #fff8e1; /* 设置每块区域的背景色 */
}

.section-title {
  font-size: 16px;
  font-weight: bold;
  margin-bottom: 10px;
}

.product {
  display: inline-block;
  width: 200rpx;
  margin-right: 16rpx;
}

.product-image {
  width: 100%;
  height: 200rpx;
}

.product-title {
  text-align: center;
}

.product-price {
  text-align: center;
  color: red;
}
