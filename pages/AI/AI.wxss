/* pages/AI/AI.wxss */

.view1{

  width: 100%;
  height: 100vh;
 
}
.xr{
  position: fixed; /* 固定位置 */
  display: flex;
  width: 100%;
  height: 100%;
  flex-direction: column;
  background-color:  rgb(229, 242, 255);
  z-index: 1; /* 设置层级低于对话框 */
}

.sc {
    width: 100%;
    font-size: 10px;
}

/* 在父元素的样式中设置flex布局 */
.page {
    display: flex;
    justify-content: center;
    /* 水平居中 */
    height: 100vh;
    /* 设置高度为整个屏幕高度 */
}

/* 在父元素的样式中设置flex布局 */
.container {
    padding: 0;
    display: flex;
    justify-content: center;
    /* 水平居中 */
    width: 100%;
}

/* 图片的样式 */
.myimg {
  display: flex;
  top: 0;
  width: 80%;
  /* 设置图片宽度 */
  height: 80vh;
  /* 设置图片高度 */
  object-fit: cover; /* 让图片按比例放大/缩小填充整个容器，并且图片的宽高比例不发生改变 */
}

/* app.wxss */
#header {
    color: #333;
    /* 设置标题颜色 */
    font-size: 24px;
    /* 设置文字大小 */
}


.info {
    font-size: 24rpx;
    color: #999999;
}

.chat{
    background-color: rgb(211, 211, 211);
    height: 200px;
}

.dialogue{
    height: 200px;
}

/* 对话 */
.page-layout {
    width: 100%;
    height: 100%;
    box-sizing: border-box;
  }
  
  .page-body {
    width: 100%;
    display: flex;
    flex-direction: column;
    padding-bottom: 56px;
  }
  
  .chat-item-body {
    display: flex;
    flex-direction: column;
    margin-top: 20rpx;
  }
  
  .chat-item-time {
    width: 100vw;
    text-align: center;
    font-size: 28rpx;
    color: #ccc;
    border-radius: 10rpx;
    margin-top: 40rpx;
  }
  
  .chat-item-layout {
    display: block;
    max-width: 82%;
    margin: 1rpx 5rpx;
    box-sizing: border-box;
    padding: 0 1rpx;
  }
  
  .chat-right {
    float: right;
  }
  
  .chat-left {
    float: left;
  }
  
  .chat-inner-layout {
    display: flex;
    flex-direction: column;
  }
  
  .chat-item-photo {
    width: 70rpx;
    height: 70rpx;
    min-width: 70rpx;
    min-height: 70rpx;
    border-radius: 50%;
  }
  
  .chat-item-msg-layout {
    display: flex;
    flex-direction: row;
  }
  
  .chat-item-name {
    display: flex;
    flex-direction: row;
    align-items: center;
    font-size: 28rpx;
    color: rgb(218, 218, 218);
    border-radius: 10rpx;
    margin: 5rpx 0 0 80rpx;
  }
  
  .chat-item-name-right {
    display: flex;
    flex-direction: row;
    align-items: center;
    /* justify-content: flex-end;  */
    /* 添加这行代码来使元素靠右 */
    font-size: 28rpx;
    color: #999;
    border-radius: 10rpx;
    margin: 5rpx 0 0 5rpx;
  }
  
  .chat-inner-msg-left {
    display: flex;
    flex-direction: column; /* 设置子元素垂直排列 */
    align-items: flex-start; /* 子元素靠左对齐 */
    color: #000;
    font-size: 30rpx;
    border-radius: 10rpx;
    background: white;
    padding: 15rpx;
    margin-left: 12rpx;
    /* 保留换行和空格 */
    /* white-space: pre-wrap;  */
    /* 保留换行合并空格 */
    white-space: pre-line;
    
  }
  
  
  .chat-inner-msg-right {
    display: inline-block;
    color: #000;
    font-size: 30rpx;
    border-radius: 10rpx;
    background: #87EE5F;
    padding: 15rpx 15rpx 15rpx 15rpx;
    margin-right: 12rpx;
    white-space: pre-wrap;
  }
  
  .submit-layout {
    position: absolute;
    bottom: 0;
    width: 100%;
    background: #eee;
    flex-direction: row;
  }
  
  .submit-layout {
    width: 100%;
    position: fixed;
    bottom: 0;
    border-top: 1px solid #ddd;
    padding: 10rpx 0;
    display: flex;
    flex-direction: row;
    align-items: center;
  }
  
  .submit-input {
    flex: 1;
    background: #fff;
    margin: 5rpx 10rpx;
    border-radius: 5rpx;
    padding: 15rpx 20rpx;
    color: #333;
    font-size: 30rpx;
  }
  
  .submit-submit {
    background-color: #13c25f;
    color: #333;
    font-weight: 700;
    font-size: 30rpx;
    border-radius: 10rpx;
    padding: 18rpx 30rpx;
    margin-right: 10rpx;
  }
  .chat-item-yhname {
    display: flex;
    flex-direction: row-reverse;
    align-items: center;
    font-size: 28rpx;
    color: rgb(218, 218, 218);
    border-radius: 10rpx;
    margin: 5rpx 80rpx 0 0;
  }
  .wt{
    display: flex;
    font-size: 24rpx;
    color: rgb(69, 185, 185);
    margin: 10rpx 0 0 0;
  }
  .stop{
    display: flex;
    width: 100%;
    /* 纵向排列 */
    flex-direction: column;
    /* 主轴方向居中 */
    justify-content: center;
    /* 交叉轴方向居中 */
    align-items: center;
    position: absolute;
    bottom: 0; 
    background: transparent;
  }
  .yp-stop{
    display: flex;
    position: absolute;
    height: 20px;
    right: 10px;
    top: 0;
  }
